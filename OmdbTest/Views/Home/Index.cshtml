@{
    ViewData["Title"] = "Home Page";
}
@model RootObject

<div class="container">
    <h1 class="display-4 text-center mb-3">Movie List</h1>

    <form asp-controller="Home" asp-action="Index" method="get" class="text-center">
        <p>
            <input type="text" placeholder="Search movie..." name="SearchString" />
            <input class="btn btn-primary" type="submit" value="Search" />
        </p>
    </form>


    <div class="row">
      
             <div class="col-lg-3">
          <div class="card shadow-sm">
              <img height="400" src="@Model.Poster">
            <div class="card-body">
              <h5 class="card-text"> @Model.Title</h5>
              <p class="card-text"> @Model.Year</p>
              <p class="card-text" name="ImdbID">@Model.imdbID</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a asp-controller="Home" asp-action="Detail" asp-route-id="@Model.imdbID" type="submit" class="btn btn-outline-warning">View</a>
                  <button type="button" class="btn btn-warning">Order</button>
                </div>            
              </div>
            </div>
          </div>
        </div>
       
      
    </div>
</div>
